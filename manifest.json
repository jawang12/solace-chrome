{
  "name": "Solace",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "Winston Wang, Jenny Chan, Jimmy Wang, Anuj Shah",
  "description": "Power of Watson on your hand",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/options.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Solace",
    "default_popup": "src/browser_action/popup.html"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "geolocation",
    "<all_urls>"
  ]
}